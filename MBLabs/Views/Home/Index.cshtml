@model IEnumerable<MBLabs.Models.Event>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <img class="img-fluid float-left w-25" src="~/img/logopreto.png" />
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Cras justo odio</li>
        <li class="list-group-item">Dapibus ac facilisis in</li>
        <li class="list-group-item">Vestibulum at eros</li>
    </ul>

</div>


<div class="card-deck">
    @{
        var i = 0;
    }
    @foreach (var item in Model)
    {
        
        <div class="border rounded col-4">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Description)</h6>
                <p class="card-text">Localização: @Html.DisplayFor(modelItem => item.Location)</p>
                <h6 class="card-header-pills"> Horario: @Html.DisplayFor(modelItem => item.Hour) </h6>
                <small class="text-muted"> Data: @Html.DisplayFor(modelItem => item.Date) </small>
            </div>
            <div class="card-footer">
                <small class="text-muted"> @Html.DisplayFor(modelItem => item.Price)</small>
            </div>
            <div class="card-body">
                <a class="btn btn-outline-dark" asp-controller="Events" asp-action="Details" asp-route-id="@item.Id"> Mais</a>
                <a href="#" class="card-link">Pagar</a>
            </div>
        </div>
        @if (i % 3 == 2)
        {
            <div class="w-100"></div>
            //@Html.Raw("</div>")

        }


        i++;
    }
</div>
